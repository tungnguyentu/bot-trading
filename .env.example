# Exchange settings
EXCHANGE=binance
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# Optional settings
# MODE=paper  # paper or live
# SYMBOL=BTC/USDT
# TIMEFRAME=1h
# STRATEGY=SMA

# Position sizing
# POSITION_SIZE=0.1  # Percentage of available balance to use per trade
# USE_FIXED_POSITION_SIZE=true  # Set to true to use fixed position size
# FIXED_POSITION_SIZE=50  # Fixed position size in quote currency (e.g., 50 USDT)
# LEVERAGE=1  # Leverage multiplier (1 = no leverage, 2 = 2x leverage, etc.)

# Telegram notifications
TELEGRAM_ENABLED=false
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
NOTIFY_ON_SIGNALS=false
NOTIFY_ON_TRADES=true
NOTIFY_ON_ERRORS=true 